<?xml version="1.0" encoding="utf-8" ?>
<extension version="2.5" type="plugin" group="content">
  <name>plg_content_moneyinst</name>
  <author>MoneyInst.com</author>
  <creationDate>24/09/2014</creationDate>
  <copyright>MoneyInst.com</copyright>
  <license>GNU General Public License</license>
  <authorEmail>info@MoneyInst.com</authorEmail>
  <authorUrl>http://MoneyInst.com</authorUrl>
  <version>1.0</version>
  <description>PLG_CONTENT_MONEYINST_XML_DESCRIPTION</description>
  <files>
    <filename plugin="moneyinst">moneyinst.php</filename>
    <filename>index.html</filename>
    <filename>mi_request.php</filename>
    <filename>mi-clear.js</filename>
  </files>
  <languages folder="administrator/language">
    <language tag="en-GB">language/en-GB/en-GB.plg_content_moneyinst.ini</language>
    <language tag="en-GB">language/en-GB/en-GB.plg_content_moneyinst.sys.ini</language>
    <language tag="ru-RU">language/ru-RU/ru-RU.plg_content_moneyinst.ini</language>
    <language tag="ru-RU">language/ru-RU/ru-RU.plg_content_moneyinst.sys.ini</language>
  </languages>
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="sid" type="text" default="" description="JFIELD_PLG_MONEYINST_SID_DESC" label="JFIELD_PLG_MONEYINST_SID_LABEL" size="5" required="true" />
        <field name="extensions" type="text" default="" description="JFIELD_PLG_MONEYINST_EXTENSIONS_DESC" label="JFIELD_PLG_MONEYINST_EXTENSIONS_LABEL" size="5" />
        <field name="default_type" type="list" default="exe" label="JFIELD_PLG_MONEYINST_DEFAULT_TYPE_LABEL" description="JFIELD_PLG_MONEYINST_DEFAULT_TYPE_DESC">
          <option value="mp3">audio</option>
          <option value="avi">video</option>
          <option value="exe">setup</option>
          <option value="pdf">book</option>
          <option value="torrent">torrent</option>
          <option value="rar">archive</option>
          <option value="iso">disk</option>
          <option value="jpg">image</option>
        </field>
        <field name="sites" type="textarea" default="" label="JFIELD_PLG_MONEYINST_SITES_LABEL" description="JFIELD_PLG_MONEYINST_SITES_DESC" rows="10" cols="5" filter="raw" />
      </fieldset>
    </fields>
  </config>
</extension>
